{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },

    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_",
        "exlude": [ 
            "./"
        ],
        "include": [ 
            "lib/",
            "README.md"
        ]
    },

    "plugins": [
        "plugins/markdown"
    ],

    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },

    "opts": {
        "recurse": true,
        "private": false
    }
}